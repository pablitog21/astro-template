---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import SocialNetworks from '../../components/networks/SocialNetworks.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="Contáctanos">
    <div class="flex flex-col min-h-screen">
        <Navbar />
        <SocialNetworks />
        <main class="flex-grow w-full bg-gradient-to-b from-gray-800 via-fuchsia-500 to-black flex flex-col items-center p-8 space-y-12 pt-24">
            <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-fuchsia-500 to-indigo-600">
                Contáctanos
            </h1>

            <!-- Información de contacto -->
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 w-full max-w-6xl">
                <section class="bg-gray-800/50 p-6 rounded-lg backdrop-blur-sm">
                    <h2 class="text-2xl font-semibold text-center mb-4">Redes Sociales</h2>
                    <div class="flex justify-center space-x-4">
                        <a href="#" class="text-fuchsia-400 hover:text-fuchsia-300 transition-colors">
                            <i class="fab fa-facebook text-2xl"></i>
                        </a>
                        <a href="#" class="text-fuchsia-400 hover:text-fuchsia-300 transition-colors">
                            <i class="fab fa-instagram text-2xl"></i>
                        </a>
                        <a href="#" class="text-fuchsia-400 hover:text-fuchsia-300 transition-colors">
                            <i class="fab fa-twitter text-2xl"></i>
                        </a>
                    </div>
                </section>

                <section class="bg-gray-800/50 p-6 rounded-lg backdrop-blur-sm">
                    <h2 class="text-2xl font-semibold text-center mb-4">Contacto Directo</h2>
                    <div class="space-y-2 text-center">
                        <p class="text-gray-300">
                            <i class="fas fa-envelope mr-2"></i>
                            contacto@beautyshop.com
                        </p>
                        <p class="text-gray-300">
                            <i class="fas fa-phone mr-2"></i>
                            555-1234-567
                        </p>
                    </div>
                </section>

                <section class="bg-gray-800/50 p-6 rounded-lg backdrop-blur-sm">
                    <h2 class="text-2xl font-semibold text-center mb-4">Ubicación</h2>
                    <p class="text-gray-300 text-center">
                        <i class="fas fa-map-marker-alt mr-2"></i>
                        Av. Álvaro Obregón 123<br>
                        Col. Roma Norte, CDMX
                    </p>
                </section>
            </div>

            <!-- Mapa -->
            <section class="w-full max-w-4xl bg-gray-800/50 p-6 rounded-lg backdrop-blur-sm">
                <h2 class="text-2xl font-semibold text-center mb-4">Encuéntranos</h2>
                <div class="aspect-video w-full">
                    <iframe 
                        src="https://www.google.com/maps/embed?pb=..." 
                        class="w-full h-full rounded-lg"
                        style="border:0;" 
                        allowfullscreen="" 
                        loading="lazy" 
                        referrerpolicy="no-referrer-when-downgrade">
                    </iframe>
                </div>
            </section>

            <!-- Formulario de contacto -->
            <section class="w-full max-w-2xl bg-gray-800/50 p-8 rounded-lg backdrop-blur-sm">
                <h2 class="text-2xl font-semibold text-center mb-6">Envíanos un mensaje</h2>
                <form class="space-y-4">
                    <div class="space-y-2">
                        <label for="name" class="block text-gray-300">Nombre completo</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            class="w-full p-3 rounded-lg bg-gray-700/50 text-white border border-gray-600 focus:border-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500 transition-all" 
                            required 
                        />
                    </div>
                    <div class="space-y-2">
                        <label for="email" class="block text-gray-300">Correo electrónico</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            class="w-full p-3 rounded-lg bg-gray-700/50 text-white border border-gray-600 focus:border-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500 transition-all" 
                            required 
                        />
                    </div>
                    <div class="space-y-2">
                        <label for="message" class="block text-gray-300">Mensaje</label>
                        <textarea 
                            id="message" 
                            name="message" 
                            rows="4"
                            class="w-full p-3 rounded-lg bg-gray-700/50 text-white border border-gray-600 focus:border-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500 transition-all" 
                            required
                        ></textarea>
                    </div>
                    <button 
                        type="submit" 
                        class="w-full bg-gradient-to-r from-fuchsia-500 to-indigo-600 text-white px-6 py-3 rounded-lg font-semibold hover:opacity-90 transition-opacity"
                    >
                        Enviar mensaje
                    </button>   
                </form>
            </section>
            
            <Footer />
        </main>
    </div>
</Layout>
