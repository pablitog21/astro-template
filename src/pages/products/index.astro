---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import SocialNetworks from '../../components/networks/SocialNetworks.astro';
import Footer from '../../components/Footer.astro';

const productos = [
  {
    id: 1,
    nombre: "Crema Hidratante Premium",
    descripcion: "Hidratación profunda con ácido hialurónico y vitamina E",
    precio: "$599",
    categoria: "Cuidado facial",
    imagen: "/productos/crema-hidratante.jpg"
  },
  {
    id: 2,
    nombre: "Sérum Antiarrugas",
    descripcion: "Fórmula avanzada con colágeno y péptidos",
    precio: "$799",
    categoria: "Tratamientos",
    imagen: "/productos/serum.jpg"
  },
  {
    id: 3,
    nombre: "Mascarilla Purificante",
    descripcion: "Limpieza profunda con arcilla y carbón activado",
    precio: "$299",
    categoria: "Mascarillas",
    imagen: "/productos/mascarilla.jpg"
  },
  // ... más productos
];

const categorias = ["Todos", "Cuidado facial", "Tratamientos", "Mascarillas", "Maquillaje"];
---

<Layout title="Nuestros Productos">
  <div class="flex flex-col min-h-screen">
    <Navbar />
    <SocialNetworks />

    <main class="flex-grow w-full bg-gradient-to-b from-gray-800 via-fuchsia-500 to-black flex flex-col items-center p-8 space-y-12 pt-24">
      <h1 class="text-5xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-fuchsia-500 to-indigo-600">
        Nuestros Productos
      </h1>

      <!-- Filtros y Búsqueda -->
      <div class="w-full max-w-6xl space-y-6">
        <div class="flex flex-wrap gap-4 justify-center">
          {categorias.map(categoria => (
            <button class="px-4 py-2 rounded-full bg-gray-800/50 text-white hover:bg-fuchsia-500 transition-colors">
              {categoria}
            </button>
          ))}
        </div>
        
        <div class="relative max-w-md mx-auto">
          <input 
            type="search" 
            placeholder="Buscar productos..." 
            class="w-full px-4 py-2 rounded-full bg-gray-800/50 text-white border border-gray-600 focus:border-fuchsia-500 focus:ring-2 focus:ring-fuchsia-500"
          />
          <i class="fas fa-search absolute right-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
        </div>
      </div>

      <!-- Grid de Productos -->
      <section class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl w-full">
        {productos.map(producto => (
          <article class="group bg-gray-800/50 backdrop-blur-sm rounded-xl overflow-hidden hover:transform hover:scale-105 transition-all duration-300">
            <img src={producto.imagen} alt={producto.nombre} class="w-full h-48 object-cover">
            <div class="p-6">
              <h2 class="text-2xl font-semibold">{producto.nombre}</h2>
              <p>{producto.descripcion}</p>
              <p class="text-lg font-semibold">{producto.precio}</p>
              <p class="text-gray-400">{producto.categoria}</p>
            </div>
          </article>
        ))}
      </section>

      <Footer />
    </main>

   
  </div>
</Layout>
